<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>颜色选择器</title>
    <link rel="stylesheet" href="/static/layui/css/layui.css">
</head>
<body>
<div id="test1"></div>
<script src="/static/layui/layui.js"></script>
<script>
    layui.use('colorpicker', function(){
        var colorpicker = layui.colorpicker;
        //渲染
        colorpicker.render({
            elem: '#test1'  //绑定元素
        });
    });
</script>
</body>
</html>